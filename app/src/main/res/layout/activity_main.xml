<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Camera Views -->
    <TextureView
        android:id="@+id/cameraTexture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:keepScreenOn="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.edgeviewer.app.renderer.GLPreviewSurface
        android:id="@+id/glSurface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Overlay - Status and Info -->
    <LinearLayout
        android:id="@+id/topOverlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/top_overlay_background"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FPS and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/fpsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fps_label"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/fps_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Error Message -->
        <TextView
            android:id="@+id/errorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/status_error"
            android:textSize="14sp"
            android:background="@drawable/error_background"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:padding="16dp"
        android:background="@drawable/bottom_controls_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Switch Camera Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchCameraButton"
            style="@style/EdgeButton.OutlinedBlue"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/switch_camera"
            android:textColor="@color/text_primary"
            app:icon="@android:drawable/ic_menu_camera" />

        <!-- Toggle View Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleButton"
            style="@style/EdgeButton.Filled"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/toggle_processed"
            android:textColor="@color/text_primary" />

        <!-- Filter Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/filterButton"
            style="@style/EdgeButton.OutlinedOrange"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/cycle_filter"
            android:textColor="@color/text_primary"
            app:icon="@android:drawable/ic_menu_view" />

        <!-- Save Frame Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportButton"
            style="@style/EdgeButton.FilledGreen"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/export_frame"
            app:icon="@android:drawable/ic_menu_save"
            android:contentDescription="@string/export_frame" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/primary_blue"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
